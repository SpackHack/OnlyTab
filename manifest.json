{
  "manifest_version": 2,
  "name": "OnlyTab",
  "version": "1.0",
  "description": "Allows only one tab of a Domain to be open",
  "permissions": ["tabs", "storage", "notifications"],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_popup": "dist/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "onlytab@spackhack.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
